@model NewProject.Models.Test

@{
    ViewBag.Title = "Tables";
}

<h2>Tables</h2>

<div class="test">

    @foreach (var item in ViewBag.Accountname)
    {
        <div class="test1">
            <h2>@item.Id</h2>
            <div>@item.Name</div>
            <div>@item.Accountname</div>
            <div>@item.Phoneno</div>
            <div>@item.Password</div>
            @Html.ActionLink("One data", "Trys", "Home", new { Id = item.Id, Name = item.Name,item.Accountname, item.Phoneno, item.Password }, null)
        </div>
    }
</div>


<style>
    .test1 {
        width: 150px;
        height: 150px;
        color: black;
        background-color: gray;
        border-width: 4px;
        border: groove;
        cursor: pointer;
    }

        .test1:hover {
            color: white;
            background-color: black;
        }

    .test {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        grid-row-align: center;
        grid-gap: 6.2vw 0.4rem;
        color: red;
        background-color: black;
        width: auto;
        height: auto;
    }
</style>
